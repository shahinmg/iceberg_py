def stac_query(date):
    query = catalog.search(
    collections = ["sentinel-2-l2a"],
    datetime = date,
    query = {"s2:mgrs_tile": dict(eq="22WEB"),
        "eo:cloud_cover": {"lt": 10}})

    items = list(query.items())
    print(f"Found: {len(items):d} datasets")

    return items

